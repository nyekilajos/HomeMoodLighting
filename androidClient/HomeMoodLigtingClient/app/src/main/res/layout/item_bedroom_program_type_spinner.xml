<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bedroom_program_type_spinner_icon"
        android:layout_width="@dimen/color_indicator_size_large"
        android:layout_height="@dimen/color_indicator_size_large"
        android:padding="@dimen/default_ui_spacing"
        android:src="@drawable/wave" />

    <TextView
        android:id="@+id/bedroom_program_type_spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_ui_spacing"
        tools:text="Example" />

</LinearLayout>
